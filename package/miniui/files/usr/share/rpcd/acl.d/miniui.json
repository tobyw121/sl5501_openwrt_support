{
  "miniui": {
    "description": "Permissions required by the MiniUI web interface",
    "read": {
      "ubus": {
        "miniui": ["status"],
        "system": ["board", "info"],
        "uci": ["get", "changes"],
        "network.interface": ["dump"],
        "session": ["access"]
      }
    },
    "write": {
      "ubus": {
        "miniui": ["apply_lan", "reload_network", "sysupgrade"],
        "uci": ["set", "add", "delete", "commit", "revert"],
        "system": ["reboot"],
        "session": ["access", "destroy"]
      }
    }
  }
}
